<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3ECE8"
    tools:context=".MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshSwipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/linear_cases"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:neumorph_shadowColorDark="#24a36f"
                    app:neumorph_shapeType="flat">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="310dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="Total World Cases"
                        android:textAlignment="center"
                        android:textSize="35sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/TCases"
                        android:layout_width="310dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginTop="63dp"
                        android:gravity="center"
                        android:hint="Total World Cases"
                        android:textAlignment="center"
                        android:textSize="35sp" />
                </soup.neumorphism.NeumorphCardView>

                <LinearLayout
                    android:id="@+id/casesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/linear_cases">

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/linear_deaths"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        app:neumorph_shadowColorDark="#24a36f"
                        app:neumorph_shapeType="flat">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginLeft="12dp"
                            android:text="Total Deaths"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TDeaths"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="70dp"
                            android:hint="Total Deaths"
                            android:textSize="20sp" />
                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/linear_recover"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        app:neumorph_shadowColorDark="#24a36f"
                        app:neumorph_shapeType="flat">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginLeft="12dp"
                            android:text="Total Recovered"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TRecover"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="70dp"
                            android:hint="Total Recovered"
                            android:textSize="20sp" />
                    </soup.neumorphism.NeumorphCardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/countrywise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/casesLayout"
                    android:gravity="center"
                    android:orientation="vertical">

                </LinearLayout>


            </RelativeLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navig_bar"
        android:background="?android:attr/windowBackground"/>


</RelativeLayout>