<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3ECE8"
    tools:context=".MainActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshSwipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--                This is being used as Data-->


                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/linear_cases"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:neumorph_shadowColorDark="#24a36f"
                    app:neumorph_shapeType="flat">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="310dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="Total World Cases"
                        android:textAlignment="center"
                        android:textSize="35sp"
                        android:textStyle="bold" />
                    <!--                This is being used as Tcases-->
                    <TextView
                        android:id="@+id/TCases"
                        android:layout_width="310dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginTop="63dp"
                        android:gravity="center"
                        android:hint="Total World Cases"
                        android:textAlignment="center"
                        android:textSize="35sp" />
                </soup.neumorphism.NeumorphCardView>

                <LinearLayout
                    android:id="@+id/casesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/linear_cases">

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/linear_deaths"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        app:neumorph_shadowColorDark="#24a36f"
                        app:neumorph_shapeType="flat">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginLeft="12dp"
                            android:text="Total Deaths"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <!--                This is being used as Tcases-->
                        <TextView
                            android:id="@+id/TDeaths"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="70dp"
                            android:hint="Total Deaths"
                            android:textSize="20sp" />
                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/linear_recover"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        app:neumorph_shadowColorDark="#24a36f"
                        app:neumorph_shapeType="flat">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginLeft="12dp"
                            android:text="Total Recovered"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <!--                This is being used as Tcases-->
                        <TextView
                            android:id="@+id/TRecover"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="70dp"
                            android:hint="Total Recovered"
                            android:textSize="20sp" />
                    </soup.neumorphism.NeumorphCardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/countrywise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/casesLayout"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!--                This is being used as countryListText-->

                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="350dp"
                        android:layout_height="130dp"
                        app:neumorph_shapeType="basin"
                        app:neumorph_shadowColorDark="#FFA1C9">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:text="Country-Wise List"
                        android:layout_marginLeft="22dp"
                        android:layout_marginTop="4dp"
                        android:textAlignment="center"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <SearchView
                        android:id="@+id/mySearchView"
                        android:layout_width="280dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="55dp"
                        android:textAlignment="center"
                        android:layout_marginLeft="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:iconifiedByDefault="false"
                        android:queryBackground="@android:color/transparent"
                        android:queryHint="Search" />

                    </soup.neumorphism.NeumorphCardView>

                    <ListView
                        android:id="@+id/myListView"
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:layout_margin="8dp"
                        android:numColumns="auto_fit"
                        tools:ignore="NestedScrolling" />
                </LinearLayout>

                <!--            &lt;!&ndash;            this is being used as refreshButton&ndash;&gt;-->
                <!--            <soup.neumorphism.NeumorphButton-->
                <!--                android:id="@+id/buttonc"-->
                <!--                style="@style/Widget.Neumorph.Button"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_below="@id/countrywise"-->
                <!--                android:text="Tap To Update Data"-->
                <!--                android:textSize="15sp"-->
                <!--                android:textStyle="bold"-->
                <!--                android:gravity="center"-->
                <!--                />-->
            </RelativeLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</RelativeLayout>